<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.FreshMarket" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Matikan warna ungu bawaan -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Matikan ripple di seluruh app -->
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lexenddecasemibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">#007F5F</item>
        <item name="colorPrimaryVariant">#007F5F</item>
        <item name="colorAccent">#007F5F</item>
    </style>

    <style name="CustomActiveIndicator" parent="">
        <item name="android:color">@android:color/transparent</item> <!-- atau ganti dengan warna lain -->
        <item name="android:background">@android:color/transparent</item>
    </style>






    <style name="Theme.FreshMarket" parent="Base.Theme.FreshMarket"/>
</resources>
